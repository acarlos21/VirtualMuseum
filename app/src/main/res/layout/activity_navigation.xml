<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4a48ae"
    android:orientation="vertical"
    tools:context=".NavigationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:onClick="ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#733513"
            android:text="Buy tickets today!!"
            android:textStyle="bold"
            android:textSize="20dp"/>



        <ImageView
            android:layout_width="337dp"
            android:layout_height="166dp"
            android:layout_gravity="center"
            android:onClick="americanRevolution"
            android:src="@drawable/ar1"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:text="American Revolution"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="frenchRevolution"
            android:src="@drawable/fr1"
            android:layout_gravity="center"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:text="French Revolution"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"/>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="industrialRevolution"
            android:src="@drawable/ir1"
            android:layout_gravity="center"
            android:paddingBottom="10dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Industrial Revolution"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <Button
                 android:onClick="faq"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="FAQ"
                 android:backgroundTint="#733513"
                 android:layout_gravity="center"
                 android:layout_marginLeft="120dp" />

             <Button
                 android:onClick="about"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="About Us"
                 android:layout_gravity="right"
                 android:backgroundTint="#733513"/>

         </LinearLayout>
    </LinearLayout>
</ScrollView>